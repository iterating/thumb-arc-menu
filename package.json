{
  "name": "thumb-arc-menu",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "install:all": "npm install && npm install -w client && npm install -w server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
